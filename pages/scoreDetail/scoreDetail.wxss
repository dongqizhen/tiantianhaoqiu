/* pages/scoreDetail/scoreDetail.wxss */
page{
  background: #f5f5f5;
  overflow: hidden;
}
.about_page{
  margin: 0 10px;
}
.wrapper{
  flex:1;
  overflow: hidden;
  
}
.top{
  position: relative;
  height:185rpx;/*这个可能有问题*/
  display: flex;
  flex-direction: column;
  margin: 26rpx 0;
}
.top .selection{
  height: 60rpx;
  background: #7966FE;
  /* margin-top: 26rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: bold;
  position: relative;
  font-size: 28rpx;
}
.top .selection picker .bg-dot{
  display: flex;
  height: 100%;
  width: 30rpx;
}

.top .selection .bg-dot.one{
  margin-right: 25rpx;
}

.top .selection .bg-dot.two{
  margin-left: 25rpx;
}

.top .selection .bg-dot image{
  display: flex;
  height: 100%;
}



.chooseDate{
  background: #fff;
  line-height:40rpx;
  padding:20rpx 35rpx;
  font-size:26rpx;
}
.section_title{
  display: inline-block;
  margin-right: 25rpx;
}
.top .selection picker{
  display: flex;
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: center;
  position: relative;
}
.top .selection picker .picker{
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  height: 100%;
  top: 0;
  width: 100%;
}
.top .selection picker .arrow{
  position: absolute;
  bottom: -37rpx;
  height: 30rpx;
  width: 100%;
  left: 0;
}

.top .selection picker .arrow image{
  display: flex;
  height: 100%;
  width: 100%;
}
.wrapper .content{
  height: calc(100% - 185rpx);
}
.wrapper .content .show{
  height: 100%;
}
.wrapper .content .show scroll-view{
  height: 100%;
}
.swiper-tab{
    width: 100%;
    height: 53rpx;
    line-height: 53rpx;
    color: #333;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    /* margin:25rpx 0; */
    /* position: absolute; */
    top:5rpx;
    left:0;
    z-index: 101;
    margin-top: 40rpx;
}
.swiper-tab picker{
  width: 120rpx;
  margin-left:45rpx;
  border: 1rpx solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 27rpx;
}
.swiper-tab picker .date-picker{
  display: flex;
  align-items: center;
}
.swiper-tab picker .date-picker image{
  height: 30rpx;
  width: 30rpx;
  transform: rotate(-90deg);
  margin-left: 5rpx;
}
.swiper-tab-item{
    width: 107rpx; 
    color:#333;
    display: inline-block;
    text-align: center;
    margin-left:45rpx;
}
.active{
    color:#fff;
    background: #7966FE;
    font-size: 30rpx;
    width:107rpx;
    height:53rpx;
    border-radius: 26rpx;
    line-height:53rpx;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.playgame{
  background: #fff;
  border-radius: 26rpx;
  margin:0 34rpx 32rpx 34rpx;
  padding:0 38rpx;
  box-shadow:0px 5px 14px 0px rgba(203,203,203,0.21);
}
.detailtop{
  display: flex;
  padding:30rpx 0 22rpx 0;
  border-bottom:1rpx solid #f5f5f5;
}
.headimg{
  width:67rpx;
  height:67rpx;
  border-radius: 50%;
  display: inline-block;
  border: 1rpx solid #dedede;
}
.date{
  width:46rpx;
  text-align: center;
  line-height:35rpx;
  display: inline-block;
}
.date text:first-child{
  color: #333;
  font-size: 40rpx;
  width: 100%;
  display: inline-block;
}
.date text:last-child{
  color: #999;
  font-size: 22rpx;
  display: inline-block;
}
.gamestatus{
  display: inline-block;
  vertical-align: top;
  margin-left:100rpx;
}
.gamestatus text{
  font-size: 32rpx;
  color:#7966FE;
  font-weight: bold;
}
.rightPersonal{
  vertical-align: top;
  display: flex;
  float: right;
  flex: 1;
}
.wxinfo{
  flex: 1;
  text-align: right;
  line-height: 30rpx;
  margin-right:22rpx;
}
.wxname{
  font-size: 30rpx;
  color: #000;
  width:100%;
  display: inline-block;
}
.gameperson{
  background: #7966FE;
  border-radius: 7rpx;
  width:80rpx;
  height:28rpx;
  line-height:28rpx;
  color:#fff;
  font-size: 20rpx;
  display: inline-block;
  text-align: center;
}
.detailBottom{
  /* display: flex; */
  padding:10rpx 0 30rpx 0;
  position: relative;
  display:inline-block;
  width:100%;
}
.detailB1,.detailB2,.detailB3{
  display: inline-block;
  float:left;
}
.detailB1{
  width:32%;
  margin-top:20rpx;
}
.detailB2{
  width:34%;
  margin:10px 2% 0 3%
}
.detailB3{
  width:26%;
  margin-top:42rpx;
}
.gameTime{
  margin-top:10rpx;
  display: flex;
}
.gameTime text:first-child,.marks text:first-child{
  font-size: 22rpx;
  color:#999;
}
.gameTime text:last-child{
  font-size: 22rpx;
  color:#333;
}
.gameTime text:first-child,.marks text:first-child{
    margin-right:15rpx;
}
.marks text{
  vertical-align: top;
  line-height: 64rpx;
}
.marks text:first-child{
  text-align: right;
  width:90rpx;
  display: inline-block;
}
.marks text:last-child{
  color: #333;
  font-size: 44rpx;
}
.detailB3 view{
  width:100%;
  text-align: center;
  /* margin-top:45rpx; */
}
.viewstatus text{
  font-size: 32rpx;
  display: inline-block;
  width:100%;
  width:42rpx;
  height:42rpx;
  border-radius:7rpx;
  color:#fff;
  line-height: 42rpx;
}
.viewstore text{
  display: inline-block;
  coloe:#333;
}
.detailB3 view text.textcolor{
  color: #7966FE;
}
